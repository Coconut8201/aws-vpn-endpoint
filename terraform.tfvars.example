# AWS Region Configuration
aws_region = "ap-northeast-1"
az         = "ap-northeast-1a"

# Network VPC Configuration (用於 Client VPN)
network_vpc_cidr               = "10.4.0.0/16"
network_private_subnet_cidrs   = "10.4.1.0/24"

# Business VPC Configuration (用於應用服務)
business_vpc_cidr              = "10.5.0.0/16"
business_private_subnet_cidrs  = "10.5.1.0/24"

# VPN Certificate Organization Information
organization_name   = "YuZhiWang"
country             = "TW"
province            = "Taiwan"
locality            = "Taipei"
organizational_unit = "IT Department"

# VPN Server Certificate Configuration
vpn_server_cn        = "vpn-server.internal"
vpn_server_dns_names = ["vpn-server-0126.internal"]
vpn_server_san_ips   = ["127.0.0.1"]

# VPN Client Configuration
client_names = ["client1", "client2"]

# Certificate Settings
certificate_validity_days = 365
output_path               = "./certificates"
enable_acm_import         = true

# Client VPN Endpoint Configuration
client_vpn_name       = "main-client-vpn"
vpn_client_cidr       = "10.101.0.0/16"
vpn_dns_servers       = ["8.8.8.8", "1.1.1.1"]
vpn_split_tunnel      = true
vpn_log_retention_days = 7

# Resource Tags
tags = {
  Environment = "development"
  ManagedBy   = "Terraform"
  Project     = "Client VPN Infrastructure"
}
